print("Welcome")

while True:
    code = int(input("Provide a comment code:\n1 - adding,\n2 - excluding,\n3 - times\n4 - division: "))

    #def adding:

    def adding (a, b):
        return a+b

    #def excluding:

    def excluding (a, b):
        return a-b

    #def times:

    def times (a, b):
        return a*b

    #def division:

    def division (a, b):
        return a/b

    if code == 1:
        a = int(input("Provide first number: \n"))
        b = int(input("Provide second number: \n"))
        print()
        adding (a, b)
        print("Resultes is: ", adding (a, b))
        print()
    elif code == 2:
        a = int(input("Provide first number: \n"))
        b = int(input("Provide second number: \n"))
        print()
        excluding (a, b)
        print("Wynik to: ", excluding (a, b))
        print()
    elif code == 3:
        a = int(input("Provide first number: \n"))
        b = int(input("Provide second number: \n"))
        print()
        times (a, b)
        print("Wynik to: ", times (a, b))
        print()
    elif code == 4:
        a = int(input("Provide first number: \n"))
        b = int(input("Provide second number: \n"))
        print()
        if b == 0:
            print("Provide number different than 0")
            continue
        division (a, b)
        print("Resultes is: ", division (a, b))
        print()
