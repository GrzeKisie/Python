print("Witaj w swiecie liczb i kalkulacji")

while True:
    kod = int(input("Podaj komende by wiedziec jakie dzialanie mam wykonac:\n1 - dodawanie,\n2 - odejmowanie,\n3 - mnozenie\n4 - dzielenie: "))

    #def dodawania:

    def dodawanie (a, b):
        return a+b

    #def odejmowanie:

    def odejmowanie (a, b):
        return a-b

    #def mnozenie:

    def mnozenie (a, b):
        return a*b

    #def dzielenie:

    def dzielenie (a, b):
        return a/b

    if kod == 1:
        a = int(input("Podaj pierwsza liczbe: \n"))
        b = int(input("Podaj pierwsza liczbe: \n"))
        print()
        dodawanie (a, b)
        print("Wynik to: ", dodawanie (a, b))
        print()
    elif kod == 2:
        a = int(input("Podaj pierwsza liczbe: \n"))
        b = int(input("Podaj pierwsza liczbe: \n"))
        print()
        odejmowanie (a, b)
        print("Wynik to: ", odejmowanie (a, b))
        print()
    elif kod == 3:
        a = int(input("Podaj pierwsza liczbe: \n"))
        b = int(input("Podaj pierwsza liczbe: \n"))
        print()
        mnozenie (a, b)
        print("Wynik to: ", mnozenie (a, b))
        print()
    elif kod == 4:
        a = int(input("Podaj pierwsza liczbe: \n"))
        b = int(input("Podaj pierwsza liczbe: \n"))
        print()
        if b == 0:
            print("Podaj inna liczbe niz 0")
            continue
        dzielenie (a, b)
        print("Wynik to: ", dzielenie (a, b))
        print()
